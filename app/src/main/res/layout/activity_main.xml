<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/BackGround"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/round_back_24"
            android:layout_marginTop="5dp"
            app:tint="@color/white" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Finace"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <TextView
        android:id="@+id/Income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="70dp"
        android:text="@string/fundraising"
        android:textAlignment="viewStart"
        android:textColor="@color/Green"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/Expense"
        />


    <TextView
        android:id="@+id/addInc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="499"
        android:textAlignment="textEnd"
        android:textColor="@color/Green"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/remExp"
         />

    <TextView
        android:id="@+id/Expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="64dp"
        android:text="Food"
        android:textAlignment="viewStart"
        android:textColor="@color/Red"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/Total"

         />

    <TextView
        android:id="@+id/remExp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="99"
        android:textAlignment="textEnd"
        android:textColor="@color/Red"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/result_display"
         />

    <TextView
            android:id="@+id/Total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Total"
            android:textColor="@color/black"
            android:textSize="60dp"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toTopOf="@id/button_layout"
            />
    <TextView
        android:id="@+id/result_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="400"
        android:textColor="@color/black"
        android:textSize="60dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toTopOf="@id/button_layout"/>
<LinearLayout
    android:id="@+id/layoutFooter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/BackGround"
    android:orientation="horizontal"
    android:padding="50dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />
        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Adding"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="180dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/Green"
                    android:text="ADD"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    app:cornerRadius="36dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Remove"
                    style="@style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator"
                    android:layout_width="180dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/Red"
                    android:text="Expense"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    app:cornerRadius="36dp"/>


            </LinearLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>